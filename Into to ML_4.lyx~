\lang hebrew
כלומר הראנו כי 
\begin_inset Formula 
\begin{equation}
\ell\left(\w_{1},\ldots,\w_{K},\x_{i},y_{i}\right)\geq\ell_{1-0}\left(h\left(\x_{i}\right),y_{i}\right)\label{eq:2}
\end{equation}

\end_inset


\end_layout

